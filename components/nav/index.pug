//- Navigation link structure
mixin nav__link(instructions)
    -
        const {
            type = "link",
            id,
            to,
            title,
            icon,
            family,
            text,
            active = false
        } = instructions
        let classes = [ "nav__link" ]
        if (active) classes.push("nav__link--active")
    if type === "link"
        - const external = to.includes("http")
        - const rel = external ? "noopener noreferrer" : false
        - const target = external ? "_blank" : false
        a(
            id=id
            class=classes.join(' ')
            href=to
            title=title
            aria-label=title
            rel=rel
            target=target
            data-icon=icon
            data-family=family
        )
            span.nav__text=text
    if type === "button"
        button(
            id=id
            class=classes.join(' ')
            aria-controls=to
            title=title
            aria-label=title
            data-icon=icon
            data-family=family
        )
            span.nav__text=text

//- Navigation structure
mixin nav(links = [], shadow = true)
    -
        let classes = [ "nav" ]
        if (!shadow) classes.push("nav--shadowless")
    nav(class=classes.join(' '))
        .nav__container
            each link in links
                +nav__link(link)