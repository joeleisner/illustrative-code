extends base

include ../components/footer/index

block settings
    -
        const nav = [
            {
                to: "http://joeleisner.com",
                title: "Joel Eisner's homepage",
                icon: "\uf015",
                text: "Home"
            },
            {
                to: "https://twitter.com/joeleisner",
                title: "Joel Eisner's Twitter",
                icon: "\uf099",
                family: "brands",
                text: "Twitter"
            },
            {
                to: "https://instagram.com/joeleisner",
                title: "Joel Eisner's Instagram",
                icon: "\uf16d",
                family: "brands",
                text: "Instagram"
            },
            {
                to: "https://github.com/joeleisner/illustrative-code/",
                title: "Illustrative Code Github repo page",
                icon: "\uf126",
                text: "GitHub"
            },
            {
                type: "button",
                id: "nav__toggle",
                title: "Turn on dark mode",
                icon: "\uf186",
                text: "Dark mode"
            }
        ]

block head
    //- Title
    title=config.title
    meta(
        name="og:title"
        content=config.title
    )
    meta(
        name="twitter:title"
        content=config.title
    )
    meta(
        name="description"
        content=config.description
    )
    meta(
        name="og:description"
        content=config.description
    )
    meta(
        name="twitter:description"
        content=config.description
    )
    meta(
        name="og:image",
        content=config.url + "images/thumbnail.png"
    )

block body
    block content

block footer
    +footer()